{
  "name": "infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/infra/src",
  "targets": {
    "cert": {
      "executor": "@ago-dev/nx-aws-cdk-v2:deploy",
      "options": {
        "stacks": "CertStack",
        "verbose": ""
      }
    },
    "website": {
      "executor": "@ago-dev/nx-aws-cdk-v2:deploy",
      "options": {
        "stacks": "WebsiteStack",
        "verbose": ""
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "cert"
        }
      ]
    },
    "dns": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./apps/infra/scripts/dns.sh"
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "website"
        }
      ]
    },
    "deploy2": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "echo done"
        ]
      },
      "dependsOn": [
        {
          "projects": "self",
          "target": "dns"
        }
      ]
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cdk deploy --app 'ts-node apps/infra/src/main.ts' WebsiteStack --require-approval never",
          "./apps/infra/scripts/dns.sh"
        ],
        "parallel": false
      },
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        }
      ]
    },
    "destroy2": {
      "executor": "@ago-dev/nx-aws-cdk-v2:destroy",
      "options": {
        "stacks": "WebsiteStack CertStack",
        "force": "",
        "verbose": ""
      }
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./scripts/dns.sh destroy",
          "cdk destroy WebsiteStack CertStack --force"
        ],
        "cwd": "./apps/infra",
        "parallel": false
      }
    },
    "debug": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./apps/infra/scripts/dns.sh"
        ]
      },
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        }
      ]
    },
    "bootstrap": {
      "executor": "@ago-dev/nx-aws-cdk-v2:bootstrap",
      "options": {}
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/infra/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/infra/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "implicitDependencies": [
    "main-api"
  ],
  "tags": []
}
