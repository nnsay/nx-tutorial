{
  "name": "infra",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/infra/src",
  "targets": {
    "cert": {
      "executor": "@ago-dev/nx-aws-cdk-v2:deploy",
      "options": {
        "stacks": "certStack",
        "force": ""
      }
    },
    "cert-destroy": {
      "executor": "@ago-dev/nx-aws-cdk-v2:destroy",
      "options": {
        "stacks": "certStack",
        "force": ""
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "cdk deploy websiteStack",
          "./scripts/dns.sh"
        ],
        "cwd": "./apps/infra",
        "parallel": false
      },
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        }
      ]
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "./scripts/dns.sh destroy",
          "cdk destroy websiteStack certStack --force"
        ],
        "cwd": "./apps/infra",
        "parallel": false
      }
    },
    "debug": {
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "#cdk metadata websiteStack",
          "#cdk destroy websiteStack --force",
          "#./scripts/dns.sh destroy",
          "./scripts/dns.sh"
        ],
        "cwd": "./apps/infra",
        "parallel": false
      },
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "build"
        }
      ]
    },
    "bootstrap": {
      "executor": "@ago-dev/nx-aws-cdk-v2:bootstrap",
      "options": {}
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "apps/infra/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "{workspaceRoot}/coverage/{projectRoot}"
      ],
      "options": {
        "jestConfig": "apps/infra/jest.config.ts",
        "passWithNoTests": true
      },
      "configurations": {
        "ci": {
          "ci": true,
          "codeCoverage": true
        }
      }
    }
  },
  "implicitDependencies": [
    "main-api"
  ],
  "tags": []
}
